@model PrinterAgent.WebUI.Controllers.AgentData
@{
    ViewData["Title"] = "Edit Agent Location";
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Agent Location</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@Model.MachineName</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" name="agentId" value="@Model.AgentId" />

                <div class="mb-3">
                    <label for="agentInfo" class="form-label">Agent ID</label>
                    <input type="text" class="form-control" id="agentInfo" value="@Model.AgentId" disabled />
                    <small class="text-muted">This ID is unique and can't be changed</small>
                </div>

                <div class="mb-3">
                    <label for="machineName" class="form-label">Machine Name</label>
                    <input type="text" class="form-control" id="machineName" value="@Model.MachineName" disabled />
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" name="location" value="@Model.Location"
                           placeholder="Enter friendly location name (e.g. 'Reception', 'Office 101')" />
                    <small class="text-muted">Friendly name to identify where this agent is located</small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Status</label>
                    <div>
                        @if (Model.IsOnline)
                        {
                            <span class="badge bg-success">Online</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Offline</span>
                        }
                        <small class="text-muted ms-2">Last seen: @Model.Timestamp.ToLocalTime().ToString("g")</small>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>